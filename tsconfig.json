{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "jest"],
    "outDir": "dist/"
  },
  "include": ["src/", "**/*.ts"],
  "exclude": ["node_modules"]
}
